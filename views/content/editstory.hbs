<form action="/stories" method="POST">
  <h1>Add Media</h1>

  <div class="form-item">
    <label for="title">Title: </label>
    <input name="title" id="title" type="text" placeholder="Name of the story" value="{{oneStory.title}}">
  </div>

  <div class="form-item">
    <label for="year">Year: </label>
    <input name="year" id="year" type="text" placeholder="Release Year">
  </div>

  <div class="form-item">
    <label for="format">Format: </label>
    <select name="format" id="format">
      <option value="">Please select the format...</option>
      <option value="Movie">Movie</option>
      <option value="Video Game">Video Game</option>
      <option value="Comic">Comic</option>
      <option value="TV Show">TV Show</option>
      <option value="Book">Book</option>
    </select>
  </div>

  <div class="form-item">
    <label for="actor">Actor: </label>
    <input name="actor" id="actor" type="text" placeholder="Who portrayed the character">
  </div>

  <div class="form-item">
    <label for="plot">Plot: </label>
    <textarea name="plot" id="" cols="30" rows="10" placeholder="A summary of the plot"></textarea>
  </div>

  <button type="submit">Add Story!</button>

  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}

</form>
